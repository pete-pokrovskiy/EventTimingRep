@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<!--Форма регистрации пользователя - используем все стандартные контроллы-->


<div class="container">
    <div class="well chrono-register-area">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <label class="col-md-3 control-label">Имя:</label>
                    <div class="col-md-9">
                        <input type="text" required class="form-control" placeholder="Введите свое имя"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-3 control-label">Логин:</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" placeholder="Введите свой логин"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-3 control-label">Пароль:</label>

                    <div class="col-md-9">
                        <input type="password" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <label class="control-label"><input type="checkbox"/> Хочу получать новости</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <label class="control-label"><input type="checkbox"/> Согласен с условиями</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <input type="button" value="Зарегистрироваться" class="form-control" style="margin: 3px;"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

