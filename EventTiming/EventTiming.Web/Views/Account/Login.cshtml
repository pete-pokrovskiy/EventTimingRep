@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="well chrono-login-area">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="row">
                <label class="control-label col-sm-2">Логин:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" placeholder="Введите логин"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="content-control col-sm-2">Пароль:</label>
                <div class="col-sm-10">
                    <input class="form-control" type="password" placeholder="Введите пароль"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" class="form-control" value="Войти"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <a href="#">Забыли пароль?</a>
            </div>
        </div>
    </form>
</div>




